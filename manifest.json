{
  "author": "Віталій Стасовський",
  "manifest_version": 3,
  "name": "Arbitrage ToolBox",
  "description": "Моніторинг геолокації, запис ip адрес в базу, перевірка з іншими ip адресами, вбудований в сторінку калькулятор вилок",
  "short_name": "Arbitrage ToolBox",
  "version": "0.2.0",
  "action": {
    "default_title": "Arbitrage ToolBox",
    "default_popup": "ui/main.html",
    "default_icon": "/images/icon.png"
  },
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png"
  },
  "options_ui": {
    "open_in_tab": true,
    "page": "ui/options.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.pokerstars.com/*",
        "*://*.pokerstars-01.com/*",
        "*://*.favbet.com/*",
        "*://*.favbet.ua/*",
        "*://*.betfair.com/*",
        "*://*.pin1111.com/*",
        "*://*.pinnacle.com/*",
        "*://*.22bet.com/*",
        "*://*.stake.ac/*",
        "*://*.stake.com/*",
        "*://*.cloudbet.com/*",
        "*://*.marathonbet.com/*",
        "*://*.betonline.ag/*",
        "*://sportsbet.io/*",
        "*://*.sportsbetting.ag/*"
      ],
      "js": ["js/lib/jquery-3.6.slim.min.js", "js/inject.js", "js/calc.js"],
      "css": ["css/content.css"]
    }
  ],
  "permissions": [
    "scripting",
    "storage",
    "activeTab",
    "tabs",
    "contextMenus",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "declarativeNetRequestWithHostAccess",
    "notifications"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "js/background.js"
  }
}
